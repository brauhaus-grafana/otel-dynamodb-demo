# Required
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=us-east-1
DYNAMODB_TABLE=otel-demo-items

# Grafana Cloud (used by Alloy to forward telemetry)
# Example endpoint: otlp-gateway-prod-us-central-0.grafana.net:443
GRAFANA_OTLP_ENDPOINT=your_grafana_otlp_endpoint_here
GRAFANA_OTLP_USERNAME=your_grafana_otlp_username_here
GRAFANA_OTLP_API_KEY=your_grafana_cloud_api_key_here

# Optional
AWS_SESSION_TOKEN=your_session_token_here

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://localhost:4318/v1/logs
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_SERVICE_NAME=otel-dynamodb-demo
OTEL_SERVICE_NAMESPACE=demo
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development
OTEL_DEBUG=false

# Optional direct-to-cloud auth (not needed when using Alloy)
# GRAFANA_OTEL_TOKEN=your_grafana_token_here
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic your_base64_token_here
